{
  "name": "hq-rental-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for the HQ Rental Software API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc --project tsconfig.dev.json",
    "prepare": "husky",
    "prepublishOnly": "npm run clean && npm run build",
    "prepack": "npm run build",
    "release:check": "npm run clean && npm run build && npm pack --dry-run",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts tests/**/*.ts examples/**/*.ts --max-warnings 0",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts examples/**/*.ts --fix",
    "lint:check": "eslint --print-config src/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\" \"*.{json,md}\"",
    "check": "npm run lint && npm run format:check",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mr-cto/hq-rental-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/mr-cto/hq-rental-sdk/issues"
  },
  "homepage": "https://github.com/mr-cto/hq-rental-sdk#readme",
  "keywords": [
    "rental",
    "sdk",
    "typescript",
    "api",
    "hq-rental",
    "rental-software",
    "fleet-management",
    "reservations",
    "payments",
    "crm"
  ],
  "author": "mr-cto",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.9.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "axios-mock-adapter": "^1.22.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.0",
    "lint-staged": "^16.2.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  }
}
